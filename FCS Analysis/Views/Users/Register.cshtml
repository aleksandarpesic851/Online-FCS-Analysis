@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Register - FCS</title>

    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
    <!-- Font Icon -->
    <link rel="stylesheet" href="~/login/fonts/material-icon/css/material-design-iconic-font.min.css">

    <!-- Main css -->
    <link rel="stylesheet" href="~/login/css/style.css">

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>
</head>
<body>
    <div class="main">
        <!-- Sign up form -->
        <section class="signup">
            <div class="container">
                <div class="signup-content">
                    <div class="signup-form">
                        <h2 class="form-title">Sign up</h2>

                        <div class="text-center text-error">
                            @ViewData["ErrorMessage"]
                        </div>

                        <form method="POST" class="register-form" id="register-form" enctype="multipart/form-data">
                            <div class="form-group">
                                <label for="user_name"><i class="zmdi zmdi-account material-icons-name"></i></label>
                                <input type="text" name="user_name" id="user_name" placeholder="Your Name" required />
                            </div>
                            <div class="form-group">
                                <label for="user_email"><i class="zmdi zmdi-email"></i></label>
                                <input type="email" name="user_email" id="user_email" placeholder="Your Email" required />
                            </div>
                            <div class="form-group">
                                <label for="user_password"><i class="zmdi zmdi-lock"></i></label>
                                <input type="password" name="user_password" id="user_password" placeholder="Password" required pattern=".{5,}" title="5 characters minimum"/>
                            </div>
                            <div class="form-group">
                                <label for="user_password_confirm"><i class="zmdi zmdi-lock-outline"></i></label>
                                <input type="password" id="user_password_confirm" placeholder="Repeat your password" required />
                            </div>
                            <div class="form-group">
                                <label for="user_phone"><i class="zmdi zmdi-phone"></i></label>
                                <input type="tel" name="user_phone" id="user_phone" placeholder="Your Phone : xxxx-xxx-xxxx" pattern="^\d{4}-\d{3}-\d{4}$" title="Please insert correct phone number. Format : xxxx-xxx-xxxx"/>
                            </div>
                            <div class="form-group">
                                <label for="user_address"><i class="zmdi zmdi-city"></i></label>
                                <input name="user_address" id="user_address" placeholder="Your Address"/>
                            </div>
                            <div class="form-group">
                                <label for="user_avatar_image"><i class="zmdi zmdi-city"></i></label>
                                <input type="file" name="user_avatar_image" id="user_avatar_image" placeholder="Your Avatar" accept="image/*" required />
                            </div>
                            <div class="form-group form-button">
                                <button type="submit" class="form-submit">Register</button>
                            </div>
                        </form>
                    </div>
                    <div class="signup-image">
                        <figure><img src="~/login/images/signup-image.jpg" alt="sing up image"></figure>
                        <a href="/Users/Login" class="signup-image-link">I am already member</a>
                    </div>
                </div>
            </div>
        </section>
    </div>

    <script>
        function submitForm() {
            const pwd = $("#user_password").val();
            const pwd_confirm = $("#user_password_confirm").val();
            if (pwd !== pwd_confirm) {
                alert("Your password confirmation is invalid. Please type your password correctly.");
                return;
            }
            $("#register-form").submit();
        }
        $().ready(function() {
            let password = document.getElementById("user_password")
            let confirm_password = document.getElementById("user_password_confirm");

            function validatePassword(){
              if(password.value != confirm_password.value) {
                confirm_password.setCustomValidity("Passwords Don't Match");
              } else {
                confirm_password.setCustomValidity('');
              }
            }

            password.onchange = validatePassword;
            confirm_password.onkeyup = validatePassword;
        })
    </script>
</body>
</html>